  body
    a @href="https://github.com/carlcalderon/liten"
      img 
        @style="position: fixed; top: 0; right: 0; border: 0; z-index: 2;"
        @src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png"
